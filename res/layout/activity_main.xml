    <Button android:id="@+id/cal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="calculate"
        />
   
    <Button android:id="@+id/play"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
